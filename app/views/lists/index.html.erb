
<div class="banner border-bottom" style="background-image: linear-gradient(rgba(0,0,0,0.4),rgba(0,0,0,0.4)), url( <%= image_path "Fargo_Theatre_Front.png", alt: "alttext" %> );">
  <div class="container position-relative">
  <h1 class="position-absolute" > <em> Welcome to the movies!</em></h1>
  </div>
</div>


<div class="container">
  <div class= "d-flex justify-content-between">
  <h1>Lists</h1>
    <div class="my-2 mr-5 ">
      <%= link_to new_list_path do %>
      <i class="fas fa-plus btn btn-primary">Add New</i>
      <% end %>
    </div>
  </div>
  <div class="cards">
     <% @lists.each do |list| %>
     <div class="card" >
        <%= image_tag "https://source.unsplash.com/400x400/?#{list.name}", alt: "alttext" %>

        <div class="card-product-infos text-align-center">
           <h2> <%= list.name %> </h2>
        </div>
           <%= link_to "", list_path(list), class: 'card-link'  %>
      </div>

    <% end %>
  </div>
</div>
